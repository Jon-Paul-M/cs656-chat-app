<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.njit.cs656.chapapplication.activity.ProfileActivity">

    <TextView
        android:id="@+id/profile_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the profile view"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        android:visibility="visible">

    </TextView>

    <TextView
        android:id="@+id/profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_header"
        android:text="This is the profile_id"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_id"
        android:text="This is the profile_email"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profile_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_email"
        android:text="This is the profile_displayname"
        android:textSize="25sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_displayname"
        android:text="This is the profile_photo"
        android:textSize="25sp"
        android:visibility="visible" />

    <!--
