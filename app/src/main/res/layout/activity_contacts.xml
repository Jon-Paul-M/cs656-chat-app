<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.njit.cs656.chapapplication.activity.ContactsActivity">

    <TextView
        android:id="@+id/contacts_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5sp"
        android:text="This is the contacts view"
        android:textSize="40sp"
        android:textStyle="normal|bold" />

    <ListView
        android:id="@+id/list_of_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacts_header"
        android:divider="@color/colorPrimaryDark"
        android:dividerHeight="1sp" />

</RelativeLayout>