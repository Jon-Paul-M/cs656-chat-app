<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal">

    <ImageView
        android:id="@+id/record_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/audio_microphone" />

    <Button
        android:id="@+id/audio_record_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/record_icon"
        android:text="record" />

    <Button
        android:id="@+id/audio_stop_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/record_icon"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/record_icon"
        android:text="stop" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/audio_stop_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Playback Control"
        android:textSize="18sp" />

    <Button
        android:id="@+id/playback_play_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="Play" />

    <Button
        android:id="@+id/playback_stop_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/record_icon"
        android:layout_below="@+id/textView2"
        android:text="Stop" />

    <Button
        android:id="@+id/audio_send_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playback_stop_bttn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Send Audio File" />

</RelativeLayout>
